<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>library_system</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>controller.LoginController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>copy</servlet-name>
		<servlet-class>controller.CopyServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>copy</servlet-name>
		<url-pattern>/copy</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>reader</servlet-name>
		<servlet-class>controller.ReaderServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>reader</servlet-name>
		<url-pattern>/reader</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>publisher</servlet-name>
		<servlet-class>controller.PublisherServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>publisher</servlet-name>
		<url-pattern>/publisher</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>document</servlet-name>
		<servlet-class>controller.DocumentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>document</servlet-name>
		<url-pattern>/document</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>author</servlet-name>
		<servlet-class>controller.AuthorServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>author</servlet-name>
		<url-pattern>/author</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>chiefedtr</servlet-name>
		<servlet-class>controller.ChiefEditorServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>chiefedtr</servlet-name>
		<url-pattern>/chiefedtr</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>library</servlet-name>
		<servlet-class>controller.LibraryServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>library</servlet-name>
		<url-pattern>/library</url-pattern>
	</servlet-mapping>

</web-app>

